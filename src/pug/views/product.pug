                    .preview-slider__stage
                        .preview-slider__main-slider.swiper.js-preview-slider-main
                            +btn({ variant: 'secondary', fab: true })(class="swiper-button-prev")
                                +sprite('chevron-left')
                            +btn({ variant: 'secondary', fab: true })(class="swiper-button-next")
                                +sprite('chevron-right')
                            .swiper-wrapper
                                each slide in slides
                                    - const { title, description, img } = slide
                                    .swiper-slide.preview-slider__slide(data-title= title)
                                        .preview-slider__image
                                            a(href= img.src data-fancybox="gallery" data-caption= title)
                                                img(src= img.src, srcset=`${img.src} 1x, ${img.src2x} 2x`)

                        .preview-slider__thumbs-slider.swiper.js-preview-slider-thumbs
                            .swiper-wrapper
                                each slide in slides
                                    - const { img } = slide
                                    .swiper-slide.preview-slider__thumb
                                        .preview-slider__image._thumb
                                            img(src= img.src, srcset=`${img.src} 1x, ${img.src2x} 2x`)

                .product__favorites-button
                    +btn({
                        caption: 'В избранное'
                    })(
                        hx-get="/favorites-response.html",
                        hx-swap="outerHTML"
                        hx-select="#btn-favorite"
                    )


