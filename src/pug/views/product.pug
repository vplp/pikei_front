extends /layout/_layout

include /modules/ui/_breadcrumbs
include /modules/_contact-form
include /modules/cards/_catalog-card

block variables
    - const title = 'Каталог'

block content
    .container
        +breadcrumbs({
            items: [
                {
                    label: 'Главная',
                    attributes: {
                        href: '/',
                        itemprop: 'item',
                    }
                },
                {
                    label: 'Каталог',
                    attributes: {
                        href: '/catalog.html',
                        itemprop: 'item',
                    }
                },
                {
                    label: 'Узлы крепления',
                    attributes: {
                        href: '#',
                        itemprop: 'item',
                    }
                },
                {
                    label: 'Узел крепления натяжной УКН-01 (болт)',
                    attributes: {
                        href: '#',
                        itemprop: 'item',
                    }
                },
            ]
        })
    +app-section()
        .product
            .product__description-wrapper
                h1.product__title Узел крепления натяжной УКН-01 цинк (болт)
                p.product__article артикул: ххх
                .product__favorites-button
                    +btn({
                        caption: 'В избранное'
                    })(
                        hx-get="/favorites-response.html",
                        hx-swap="outerHTML"
                        hx-select="#btn-favorite"
                    )
                p.product__description.text-content= 'Узел крепления натяжной УКН-01 предназначен для крепления натяжных спиральных или анкерных зажимов. Крепится на опорах ВЛ до 20 кВ городского электрохозяйства, элементах зданий и сооружений с помощью монтажной ленты. В комплект узла крепления УКН входит площадка, скоба, 4 гайки, 2 шайбы, 2 стопорных кольца. Узел крепления изготавливается из стали с защитным покрытием из цинка в климатическом исполнении УХЛ1 ГОСТ 15150.'
                .product__specs
                    -
                        const specs = [
                            {
                                title: 'Технические характеристики',
                                items: [
                                    ['Максимальная рабочая нагрузка, кН10', '10 кН'],
                                    ['Материал корпуса', 'сталь 10'],
                                    ['Покрытие', 'цинк'],
                                    ['Масса', '0,55 кг'],
                                    ['Габаритные размеры', '12х37х64 мм'],
                                    ['Диаметр кабеля ВОЛС', '20 мм'],
                                ]
                            },
                            {
                                title: 'Упаковка',
                                items: [
                                    ['Материал упаковка', 'картон, коробка'],
                                    ['В одной коробке', '40 шт.'],
                                    ['Вес одной коробки', '19,7 кг'],
                                    ['Габариты упаковки', '300х700х200 мм',],
                                    ['Минимальная партия', '1 коробка'],
                                ]
                            },
                            {
                                title: 'Комплектация',
                                items: [
                                    ['площадка, скоба, гайка', '4 шт.'],
                                    ['шайба', '2 шт.'],
                                    ['стопорное кольцо', '2 шт.'],
                                ]
                            },
                        ]

                    each spec in specs
                        .specs-group
                            .specs-group__title= spec.title
                            .specs-group__items
                                each item in spec.items
                                    - const [name, value] = item
                                    .specs-group__item
                                        span.specs-group__item-name= name
                                        span.specs-group__delimeter
                                        span.specs-group__item-value= value
                    .specs-group
                        .specs-group__title= 'Область применения'
                        .specs-group__items
                            .specs-group__item
                                span.specs-group__item-name= 'Строители ВОЛС'
                            .specs-group__item
                                span.specs-group__item-name= 'Монтажные организации'

                .product__documents
                    +ui-document()
                    +ui-document()
                    +ui-document()
            .product__aside

